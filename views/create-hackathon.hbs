<div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6">Create a New Hackathon</h1>
  
  {{#if error}}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
      <div class="flex items-center">
        <i class="fas fa-exclamation-circle mr-2"></i>
        <p>{{error}}</p>
      </div>
    </div>
  {{/if}}
  
  <!-- Working form that allows data to be modified -->
  <form action="/hackathons/create" method="POST" class="space-y-6">
    <div>
      <label for="title" class="block text-gray-700 font-medium mb-1">Hackathon Title</label>
      <input type="text" name="title" id="title" required value="{{formData.title}}" 
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">
    </div>
    
    <div>
      <label for="description" class="block text-gray-700 font-medium mb-1">Description</label>
      <textarea name="description" id="description" rows="4" required 
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">{{formData.description}}</textarea>
      <p class="mt-1 text-sm text-gray-500">
        <i class="fas fa-info-circle mr-1"></i>
        Describe the hackathon challenge and requirements.
      </p>
    </div>
    
    <div>
      <label for="evaluationCriteria" class="block text-gray-700 font-medium mb-1">Evaluation Criteria</label>
      <textarea name="evaluationCriteria" id="evaluationCriteria" rows="4" required 
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">{{formData.evaluationCriteria}}</textarea>
      <p class="mt-1 text-sm text-gray-500">
        <i class="fas fa-info-circle mr-1"></i>
        Enter each criterion on a new line.
      </p>
    </div>
    
    <div>
      <label for="roleDescription" class="block text-gray-700 font-medium mb-1">Target Role Description</label>
      <input type="text" name="roleDescription" id="roleDescription" required value="{{formData.roleDescription}}" 
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">
    </div>
    
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <label for="startDate" class="block text-gray-700 font-medium mb-1">Start Date</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fas fa-calendar-alt text-gray-400"></i>
          </div>
          <input type="datetime-local" name="startDate" id="startDate" required value="{{formData.startDate}}" 
            class="w-full pl-10 px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">
        </div>
      </div>
      
      <div>
        <label for="endDate" class="block text-gray-700 font-medium mb-1">End Date</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fas fa-calendar-alt text-gray-400"></i>
          </div>
          <input type="datetime-local" name="endDate" id="endDate" required value="{{formData.endDate}}" 
            class="w-full pl-10 px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">
        </div>
      </div>
    </div>
    
    <div class="flex justify-end">
      <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition flex items-center">
        <i class="fas fa-plus-circle mr-2"></i> Create Hackathon
      </button>
    </div>
  </form>
</div>