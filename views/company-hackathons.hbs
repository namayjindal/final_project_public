<div class="max-w-7xl mx-auto">
  <div class="flex flex-col md:flex-row justify-between items-center mb-8">
    <h1 class="text-3xl font-bold mb-4 md:mb-0">Your Hackathons</h1>
    <a href="/hackathons/create" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition flex items-center">
      <i class="fas fa-plus-circle mr-2"></i> Create New Hackathon
    </a>
  </div>
  
  {{#if hackathons.length}}
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {{#each hackathons}}
        <div class="bg-white overflow-hidden shadow-md rounded-lg border border-gray-200 hover:shadow-lg transition">
          <div class="px-6 py-5">
            <h3 class="text-xl font-bold text-blue-600">{{title}}</h3>
            <p class="mt-1 text-gray-500">{{roleDescription}}</p>
          </div>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
            <div class="text-sm mb-1">
              <span class="font-semibold text-gray-700">
                <i class="fas fa-calendar-day mr-1"></i> Start:
              </span> 
              {{startDate}}
            </div>
            <div class="text-sm mb-1">
              <span class="font-semibold text-gray-700">
                <i class="fas fa-calendar-check mr-1"></i> End:
              </span> 
              {{endDate}}
            </div>
            <div class="text-sm">
              <span class="font-semibold text-gray-700">
                <i class="fas fa-info-circle mr-1"></i> Status:
              </span> 
              {{#if isActive}}
                <span class="text-green-600 font-medium">● Active</span>
              {{else}}
                <span class="text-red-600 font-medium">● Closed</span>
              {{/if}}
            </div>
          </div>
          <div class="px-6 py-3 border-t border-gray-100 flex justify-end">
            <a href="#" class="text-blue-600 hover:text-blue-800 transition font-medium">
              View Details <i class="fas fa-arrow-right ml-1"></i>
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="bg-white overflow-hidden shadow-md rounded-lg border border-gray-200">
      <div class="px-6 py-10 text-center">
        <div class="text-5xl text-gray-300 mb-4">
          <i class="fas fa-clipboard-list"></i>
        </div>
        <h3 class="text-xl font-bold mb-2">No Hackathons Yet</h3>
        <p class="text-gray-500 mb-6 max-w-md mx-auto">
          You haven't created any hackathons yet. Create your first hackathon to get started.
        </p>
        <a href="/hackathons/create" class="inline-flex px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">
          <i class="fas fa-plus-circle mr-2"></i> Create New Hackathon
        </a>
      </div>
    </div>
  {{/if}}
</div>